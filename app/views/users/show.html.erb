<h1 align="center">Welcome to <%= @user.username.capitalize %>'s page</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>
<div class="center meta-details">
    <small>Joined <%= time_ago_in_words(@user.created_at) %> ago,
                  account last updated: <%= time_ago_in_words(@user.updated_at) %> ago
    </small>
</div>
<div class="center">
  <%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div class="center">
  <%= will_paginate @user_articles %>
</div>